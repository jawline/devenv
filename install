#!/usr/bin/env bash
set -euv

# Install ocaml packages (home manager activation scripts try and install on every startup)

# Install JS compiler extensions
opam init -y
opam repo add janestreet-bleeding-external https://github.com/janestreet/opam-repository.git
eval $(opam env)
opam update -y
opam upgrade -y
opam install -y dune core async hardcaml hardcaml_waveterm

# Install Rust (ditto)
rustup default nightly
rustup update
